<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名称：" />
        <EditText
            android:id="@+id/etForgetName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" >
            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llUnforgetDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日期：" />
       	<Button
    	    android:layout_width="wrap_content" 
    		android:layout_height="wrap_content" 
    		android:background="@drawable/shape_add_minus"
    		android:textColor="#ffffff"
    		android:textSize="28sp"
    		android:text="@string/start"/>

    	<TextView  
    	    android:id="@+id/tvUnforgetYear"
    		android:layout_width="wrap_content" 
    		android:layout_height="wrap_content" 
    		android:textSize="18sp"
    		android:text="2014年"/>
    	
    	<TextView  
    	    android:id="@+id/tvUnforgetMonth"
    		android:layout_width="wrap_content" 
    		android:layout_height="wrap_content" 
    		android:textSize="18sp"
    		android:text="11月"/>
    	<TextView  
    	    android:id="@+id/tvUnforgetDay"
    		android:layout_width="wrap_content" 
    		android:layout_height="wrap_content" 
    		android:textSize="18sp"
    		android:text="24日"/>
    	<Button
    	    android:layout_width="wrap_content" 
    		android:layout_height="wrap_content" 
    		android:background="@drawable/shape_add_minus"
    		android:textColor="#ffffff"
    		android:textSize="28sp"
    		android:text="@string/end"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llUnforgetTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间：" />
       	<Button
    	    android:layout_width="wrap_content" 
    		android:layout_height="wrap_content" 
    		android:background="@drawable/shape_add_minus"
    		android:textColor="#ffffff"
    		android:textSize="28sp"
    		android:text="@string/start"/>

    	<TextView  
    	    android:id="@+id/tvUnforgetHour"
    		android:layout_width="wrap_content" 
    		android:layout_height="wrap_content" 
    		android:textSize="18sp"
    		android:text="19时"/>
    	
    	<TextView  
    	    android:id="@+id/tvUnforgetMinute"
    		android:layout_width="wrap_content" 
    		android:layout_height="wrap_content" 
    		android:textSize="18sp"
    		android:text="11分"/>
    	<Button
    	    android:layout_width="wrap_content" 
    		android:layout_height="wrap_content" 
    		android:background="@drawable/shape_add_minus"
    		android:textColor="#ffffff"
    		android:textSize="28sp"
    		android:text="@string/end"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnAddUnforgetAudio"
            android:layout_width="178dp"
            android:layout_height="wrap_content"
            android:text="录音" />
        
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/btnAddUnforgetCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消" />
        <Button
            android:id="@+id/btnAddUnforgetOK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定" />
    </LinearLayout>

</LinearLayout>
